<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CadastroFilme">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/corPadrao"
            android:gravity="center"
            android:layout_height="match_parent" android:layout_weight=".9">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="1"
                android:layout_marginLeft="8dp" android:textSize="24sp" android:textColor="#fff"
                tools:text="Cadastro de Filme" android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight=".1">
        <TextView
                android:text="Título"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp" android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText3" android:hint="Ex: Capitaum Arérica" android:layout_marginLeft="20dp"/>
        <TextView
                android:text="Duração"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp" android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText2" android:layout_marginLeft="20dp" android:hint="Preencha em minutos"/>
        <TextView
                android:text="Classificação Etária"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp" android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText5" android:layout_marginLeft="20dp"/>
        <TextView
                android:text="Gênero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp" android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText7" android:layout_marginLeft="20dp" android:hint="Ex: Animação"/>
        <TextView
                android:text="Descrição"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp" android:textStyle="bold"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText8" android:layout_marginLeft="20dp"/>
    </LinearLayout>
</LinearLayout>