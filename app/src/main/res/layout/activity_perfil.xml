<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/corPadrao"
            android:gravity="center"
            android:layout_height="match_parent" android:layout_weight=".9">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:layout_marginLeft="15dp" android:textSize="24sp" android:textColor="#fff"
                android:textStyle="bold" android:text="Menu"/>
        <Button
                android:text="Sair"
                android:layout_width="100dp"
                android:layout_height="match_parent" android:id="@+id/bt_sair"
                android:backgroundTint="@color/corPadraoEscura"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
                android:layout_marginTop="4dp" android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center" android:layout_height="match_parent" android:layout_weight=".1"
            android:id="@+id/linearLayout6">

        <Button
                android:text="cadastrar filme"
                android:layout_width="300dp"
                android:layout_height="70dp" android:id="@+id/bt_cadastrar_filme_perfil"
                android:backgroundTint="@color/corPadrao" android:textColor="@android:color/white"
                android:textStyle="bold"/>
        <Button
                android:text="cadastrar usuÃ¡rio"
